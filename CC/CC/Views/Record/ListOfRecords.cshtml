@model IEnumerable<CC.Context.Record>

@{
    ViewBag.Title = "ListOfRecords";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container body-content">
        <h2>Список ваших записей</h2>

        <div>
            @Html.ActionLink("Назад", "AccountIndex", "Manage")
        </div>

        @{
            int i = 0;
        }

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Номер")
                </th>

                <th>
                    @Html.DisplayName("Заголовок")
                </th>

                <th>
                    @Html.DisplayName("Дата")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => i)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.RecordDate)
                    </td>

                    <td>

                        <a href="~/Record/EditRecord/@item.Id">Редактировать</a> |
                        <a href="~/Record/Details/@item.Id">Подробнее</a> |
                        <a href="~/Record/DeleteRecord/@item.Id">Удалить</a>
                        @*@Html.ActionLink("Редактировать", "EditRecord", "ControllerName", new { id = item.Id }) |
                            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Удалить", "DeleteRecord", new { id = item.Id })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>


