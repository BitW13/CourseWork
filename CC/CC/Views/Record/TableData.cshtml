@model IEnumerable<CC.Context.ContextModels.Record>

@if (Model.Count() == 0)
{
    <tr>
        <td class="to-centre" colspan="3" style="color: red;">
            Записей не найдено
        </td>
    </tr>
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>

        <td>
            @Html.DisplayFor(model => item.RecordDate)
        </td>

        <td class="to-centre">
            <a href="~/Record/Details/@item.Id">Подробнее</a>
        </td>
    </tr>
}
