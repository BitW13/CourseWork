@{
    ViewBag.Title = "AllRecords";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section body{

    <div class="container body-content font18">
        <h2>Все новости</h2>

        @using (Ajax.BeginForm("AllRecords", "Record", new AjaxOptions { UpdateTargetId = "table", Url = Url.Action("TableData") }, htmlAttributes: new { @id = "myForm" }))
        {
            <input type="text" name="recordName" class="search" form="myForm" placeholder="Введите заголовок новости" style="width: 450px" />
            <input type="submit" value="Поиск" class="btn btn-info" />

            <table class="table table-bordered table-hover" style="margin-top: 20px;">
                <tr>
                    <th>
                        @Html.DisplayName("Псевдоним автора")
                    </th>
                    <th>
                        @Html.DisplayName("Заголовок")
                    </th>
                    <th>
                        @Html.DisplayName("Дата")
                    </th>
                    <th></th>
                </tr>

                <tbody id="table">
                    @Html.Action("TableData", new { recordName = Model })
                </tbody>

            </table>
        }

    </div>

}

@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/AutoSearch.js"></script>
}

@section footer{
    <p class="font18">
        &copy; @DateTime.Now.Year - Coffee-Cup
    </p>
}




