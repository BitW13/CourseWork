@*@model IEnumerable<CC.Context.ContextModels.Cafe>*@

@{
    ViewBag.Title = "ListOfCafes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section body{

    <div class="container body-content font18">
        <h2>Список заведений</h2>

        @using (Ajax.BeginForm("ListOfCafes", "Cafe", new AjaxOptions { UpdateTargetId = "table", Url = Url.Action("TableData") }, htmlAttributes: new { @id = "myForm" }))
        {
            <input form="myForm" type="text" class="search" name="cafe" placeholder="Введите название заведения" style="width: 450px" />
            <input type="submit" value="Поиск" class="btn btn-info" />

            <table class="table table-bordered table-hover" style="margin-top: 20px;">
                <tr>
                    <th>
                        @Html.DisplayName("Название заведения")
                    </th>
                    <th></th>
                </tr>

                <tbody id="table">
                    @Html.Action("TableData", new { cafe = Model })
                </tbody>

            </table>
        }


    </div>

}

@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/AutoSearch.js"></script>
}

@section footer{
    @{
        Html.RenderPartial("_Footer");
    }
}






