@model CC.Models.UseTicketsModel

@{
    ViewBag.Title = "Logout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container body-content">
        @using (Html.BeginForm("Logout", "Account"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2>Выход из аккаунта</h2>
                <h4>Вы действительно хотите выйти из аккаунта?</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="submit" value="Выход" class="btn btn-default" /> |
                @Html.ActionLink("На главную", "Index", "Home")
            </div>
        }
    </div>
</body>
</html>




