@model CC.Models.UseTicketsModel

@{
    ViewBag.Title = "UseTickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    @using (Html.BeginForm("UseTickets", "Manage"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Использование билетов</h2>
            <hr />


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Использовать" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("На главную", "Index", "Home") |
        @Html.ActionLink("Назад", "ListOfUsers", "Manage")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


