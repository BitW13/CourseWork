@model CC.Context.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section body{

    <div class="container body-content font18">
        <h2>Удаление аккаунта</h2>

        <h3>Елси Вы удалите аккаунт, Вы потеряете все данные. Вы действителььно хотите удалить аккаунт?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Никнейм"):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NickName)
                </dd>

                <dt>
                    @Html.DisplayName("Имя"):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>

                <dt>
                    @Html.DisplayName("Фамилия"):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserSurname)
                </dd>

                <dt>
                    @Html.DisplayName("Ваши права"):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserRoleName)
                </dd>

                <dt>
                    @Html.DisplayName("Количество")
                    <img class="little-img" src="~/Content/Pictures/coin.svg" />:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserCoins)
                </dd>

                <dt>
                    @Html.DisplayName("Количество")
                    <img class="little-img" src="~/Content/Pictures/tickets.svg" />:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserTickets)
                </dd>

            </dl>

            @using (Html.BeginForm("Delete", "Manage"))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.Id)

                <div class="form-actions no-color">
                    <input type="submit" value="Удалить" class="btn btn-default" /> |
                    @Html.ActionLink("Назад", "AccountIndex", "Manage")
                </div>
            }
        </div>
    </div>

}

@section footer{
    @{
        Html.RenderPartial("_Footer");
    }
}





